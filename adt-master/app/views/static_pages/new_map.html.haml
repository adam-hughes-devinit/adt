= stylesheet_link_tag "leaflet/leaflet"


.row-fluid
	#map.span6{style: "height:500px;"}
	#chart.span6
.row-fluid
	#top_projects.span12
		%h2 
			Top Projects in 
			%span.country_name
				Africa
		%table.table.sortable
			%thead
				%tr
					%th ID
					%th Year
					%th Title
					%th Amount
					%th Sector
			%tbody#project_rows


%script#project_template{type: "text/template"}
	%tr
		%td 
			<%= id %>
		%td
			<%= year %>
		%td
			%a{target: "_blank", href: "/projects/<%= id %>".html_safe}
				<%= title %>
		%td{value: "<%= usd_2009 %>".html_safe } 
			<%= usd_2009 %>
		%td
			<%= crs_sector_name %>
