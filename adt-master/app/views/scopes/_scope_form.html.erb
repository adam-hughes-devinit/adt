<%= simple_form_for @scope do |f| %>

	
	<textarea style='font-family:courier, monospaced;' name='scope' rows='20', cols:'40'
	><%= YAML::dump(@scope.as_json)
		.gsub(/:([a-z])/, '\1') # ":channels:" --> "channels:"
		.gsub(/id:.*\n/, '') # remove "id: 3 \n" etc
	%></textarea>
	<%= f.button :submit, "Save" %>

<% end %>