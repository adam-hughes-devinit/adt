
= javascript_include_tag 'bootstrap_sortable'
%table.table.sortable
	%thead
		%tr
			%th Name
			%th Description
			%th File Type
	%tbody
		- Scope.all.each do |scope|
			%tr 
				%td
					= link_to scope.name, "/projects.csv?scope_names[]=#{scope.name}"
				%td
					= scope.description
				%td
					= link_to "<img src='#{AggregatesHelper::SPREADSHEET_ICON}'> CSV".html_safe, "/projects.csv?scope_names[]=#{scope.name}"