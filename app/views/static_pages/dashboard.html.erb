<% provide :title, "Dashboard" %>
<%= stylesheet_link_tag 'dashboard/styles' %>
<script type="text/javascript" src='https://raw.github.com/StanfordHCI/datavore/master/dv.js'></script>
<script type='text/javascript' src='https://raw.github.com/stoodder/finchjs/master/scripts/finch.js'></script>


	<div class='row-fluid'>
		<span class='alert info span12'>
			Optimized for Google Chrome.
		</span>
	</div>

	<div class='row-fluid' id='vis'>
		<div id='now_showing' class='span12 row-fluid'>
			<div class='span6'>
				<h1 id='chart_title'>
					
				</h1>
				<p id='detail'>
					<i>Mouseover for detail</i>
				</p>

			</div>
			<div class='span6'>

				<div class='row-fluid'>
					<span id='rescale' class='span4 btn btn-primary' onclick="App.rescale()">
						Rescale
					</span>
					<span id='remove_blanks' class='span6 offset2 btn btn-danger' onclick="App.toggle_remove_blanks()">
						Remove blanks: Off
					</span>
				</div>
				<div class='row-fluid'>
					<span id='sort_order' class='span6 offset6 btn' 
					data-sort-order='a_to_z'
					onclick="App.toggle_sort_order()">
						Sort order: A &rarr; Z
					</span>
				</div>

			</div>
		</div>
		<div id='waiting'>
			<div class='hero-unit'>
				<h1 id='chart_longer_title'></h1>
				<p>Filter and group the dataset with selectors below. </p>
				<p>Start typing to filter the items on the list.</p>
				<p><i>Loading your data... </i></p>
			</div>
		</div>
	</div>
	<div class='row-fluid' id='value_container'>
	</div>
	<div  id='filter_container'>
	</div>

<div id="overlay" class="modal hide fade" tabindex="-1" role="dialog" 
	aria-labelledby="overlay_header" aria-hidden="true">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		<h3 id="overlay_header"></h3>
	</div>
	<div class="modal-body">
	</div>
	<div class="modal-footer">
		<span id='page-number'></span>
		<button class="btn" data-dismiss="modal" aria-hidden="true">
			Close
		</button>
	</div>
</div>		
<%= javascript_include_tag 'underscore/index' %>
<%= javascript_include_tag 'd3/d3.v2.min' %>
<%= javascript_include_tag 'dashboard/index' %>

