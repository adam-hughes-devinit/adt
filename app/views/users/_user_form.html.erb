<%= simple_form_for(@user, html: { class: "form-horizontal"}) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<%= f.input :name, input_html: { class: "span6" }, hint: "Username must be unique" %>
	<%= f.input :email, input_html: { class: "span6" }, hint: "Email must be unique" %>
	<%= f.input :password, input_html: {class: "span6"}, hint: "Must be longer than six characters" %>
	<%= f.input :password_confirmation, input_html: { class: "span6"}, hint: 'Must match password' %>
	<%= f.input(:admin, hint: "Administrative permissions?") if current_user.admin %>
	<%= f.button :submit, @user.new_record? ? 'Create my account' : "Update user", class: "btn-primary" %>
<% end %> 
