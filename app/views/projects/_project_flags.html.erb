<ul>
	<% @flags.each_with_index do |f, i| %>
		<li>
			<a id="flag_<%= i+1 %>"></a> 
			<span>
					<%= time_ago_in_words(f.updated_at) %> ago, <%= f.owner ? f.owner.name : "An anonymous user" %> <span style="color:<%= f.flag_type.color %>"><%= pluralize( 2, f.flag_type.name )[2..10] %></span> a <%= f.flaggable_type.downcase %>.
			</span>
			<ul>
				<li><b>Source:</b> <%= f.source %> </li>
				<li><b>Comment:</b> <%= f.comment %> </li>
			</ul>
		</li>
	<% end %>
</ul>
