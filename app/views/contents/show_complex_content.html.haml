-# encoding: utf-8

- provide :title, @complex_name.titleize

.tab-content.site_content{style: "margin: auto, auto;"}
  #en.tab-pane.active
    .row-fluid
      %h1.page-header{style: "overflow-y:auto;"}
        .span12
          = @complex_name.titleize
    .row-fluid
      .span12
        //- cache("content/#{@content.complex_name}/{@content.updated_at}/en/#", expires_in: 1.minute ) do
        = render @complex_name


:javascript
  // Javascript to enable link to tab
  var url = document.location.toString();
  if (url.match('#')) {
      $('.nav-pills a[href=#'+url.split('#')[1]+']').tab('show') ;
  }

  // Change hash for page-reload
  $('.nav-pills a').on('shown', function (e) {
      new_hash = e.target.hash;

      if(history.pushState) {
          history.pushState(null, null, new_hash);
      }
      else {
          location.hash = new_hash;
      }

  })