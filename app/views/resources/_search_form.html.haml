
.well.container-fluid
	= form_tag "/resources", method: :get do
		.row-fluid
			.span6
				= label_tag "search"
				= search_field_tag :search, params[:search], placeholder: "Search all resources..."
			.span6
				= label_tag "resource_type"
				=  select_tag :resource_type, Resource::RESOURCE_TYPES.map{|rt| "<option #{params[:resource_type].present? && params[:resource_type].include?(rt) ? "selected" : "" }>#{rt}</option>"}.join, multiple: true, include_blank: true
		.row-fluid
			.span4
				= submit_tag "Search", name: nil, class: "btn btn-primary"
