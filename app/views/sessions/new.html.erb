<% provide(:title, "Sign in") %>
<% provide(:first_header, "Sign in") %>

<%= simple_form_for(:session, url: sessions_path, html: { class: "form-horizontal"} )  do |f| %>
	<%= f.input :email, html: {class: "span6"} %>
	<%= f.input :password, html: {class: "span6"} %>
	<%= f.button :submit, "Sign in", class: "btn-primary" %>
<% end %>
