<% provide :title, "Scopes"
provide :first_header, "New Scope" %>

<%= javascript_include_tag 'backbone/index' %>

<%= simple_form_for @scope do |f| %> 
	<%= render 'shared/error_messages', object: f.object %>
	<%= f.input :name %>
	<%= f.input :hint, as: :string , hint: "~1 sentence to describe this scope" %>
	<%= f.input :symbol, hint:"Symbol is the <b>Internal name</b> -- it must be unique and contain only lower-case letters and underscores (_)." %>
	<%= f.input :type, as: :radio_buttons, collection: @scope.scope_types %>
	<%= f.button :submit, @scope.new_record? ? "Create scope" : "Update scope", class: "btn-primary" %>
<% end %> 
