<% provide(:first_header, "All Organizations") %>
<% provide(:title, "Organizations") %>

  <% if current_user && current_user.owner==Organization.find_by_name("AidData") %>
    <%= link_to 'New Organization', new_organization_path %>
  <% end %>

<table class='code-table'>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Links</th>

  </tr>

<% @organizations.each do |organization| %>
  <tr>
    <td><%= organization.name ? "#{organization.name[0..50]}#{organization.name.length > 50 ? '...' : ''}" : "" %></td>
    <td><%= organization.description ? "#{organization.description[0..50]}#{organization.description.length > 50 ? '...' : ''}" : "" %></td>
    <td><%= link_to 'View', organization %>
      <% if current_user && current_user.owner == Organization.find_by_name("AidData") %>
         | <%= link_to 'Edit', edit_organization_path(organization) %>
         | <%= link_to 'Delete',  organization, method: :delete, confirm: "Are you sure?" %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />
  <% if current_user && current_user.owner==Organization.find_by_name("AidData") %>
    <%= link_to 'New Organization', new_organization_path %>
  <% end %>

